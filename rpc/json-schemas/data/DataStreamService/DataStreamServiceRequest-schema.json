{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "definitions": {
    "Polymorphic": {
      "type": "object",
      "properties": {
        "$type": { "$ref": "#/definitions/NamespacedId" }
      },
      "required": [ "$type" ]
    },
    "NamespacedId": {
      "type": "string",
      "pattern": "^([a-z_0-9]+\\.?)+[a-z_0-9]$"
    },

    "DataStreamsConfiguration": {
      "type": "object",
      "properties": {
        "studyDeploymentId": { "type": "string", "format": "uuid" },
        "expectedDataStreams": {
          "type": "array",
          "items": { "$ref": "#/definitions/ExpectedDataStream" }
        }
      },
      "required": [ "studyDeploymentId" ],
      "additionalProperties": false
    },
    "ExpectedDataStream": {
      "type": "object",
      "properties": {
        "deviceRoleName": { "type": "string" },
        "dataType": { "$ref": "#/definitions/NamespacedId" }
      },
      "required": [ "deviceRoleName", "dataType" ],
      "additionalProperties": false
    },
    "DataStreamBatch": {
      "type": "array",
      "items": { "$ref": "#/definitions/DataStreamSequence" }
    },
    "DataStreamSequence": {
      "type": "object",
      "properties": {
        "dataStream": { "$ref": "#/definitions/DataStreamId" },
        "firstSequenceId": { "type": "integer", "minimum": 0 },
        "measurements": {
          "description": "Measurements in this sequence. All data types of measurement data needs to correspond to data type of `dataStream`.",
          "type": "array",
          "items": { "$ref": "#/definitions/Measurement" }
        },
        "triggerIds": {
          "type": "array",
          "items": { "type": "integer" },
          "minItems": 1
        },
        "syncPoint": { "$ref": "#/definitions/SyncPoint" }
      },
      "required": [ "dataStream", "firstSequenceId", "measurements", "triggerIds" ],
      "additionalProperties": false
    },
    "SyncPoint": {
      "type": "object",
      "properties": {
        "synchronizedOn": { "type": "string", "format": "date-time" },
        "sensorTimestampAtSyncPoint": { "type": "integer" },
        "relativeClockSpeed": { "type": "number" }
      },
      "required": [ "synchronizedOn", "sensorTimestampAtSyncPoint", "relativeClockSpeed" ],
      "additionalProperties": false
    },
    "Measurement": {
      "type": "object",
      "properties": {
        "sensorStartTime": { "type": "integer" },
        "sensorEndTime": {
          "description": "If set, sensorEndTime needs to lie after sensorStartTime.",
          "type": [ "integer", "null" ]
        },
        "data": { "$ref": "#/definitions/Data" }
      },
      "required": [ "sensorStartTime", "data" ],
      "additionalProperties": false
    },
    "DataStreamId": {
      "type": "object",
      "properties": {
        "studyDeploymentId": { "type": "string", "format": "uuid" },
        "deviceRoleName": { "type" : "string" },
        "dataType": { "$ref": "#/definitions/NamespacedId" }
      },
      "required": [ "studyDeploymentId", "deviceRoleName", "dataType" ],
      "additionalProperties": false
    },
    "Data": {
      "allOf": [
        { "$ref": "#/definitions/Polymorphic" }
      ]
    }
  },
  "oneOf": [
    {
      "type": "object",
  	  "properties": {
        "$type": { "const": "dk.cachet.carp.data.infrastructure.DataStreamServiceRequest.OpenDataStreams" },
        "configuration": { "$ref": "#/definitions/DataStreamsConfiguration" }
      },
      "required": [ "$type", "configuration" ],
      "additionalProperties": false
	},
    {
      "type": "object",
  	  "properties": {
        "$type": { "const": "dk.cachet.carp.data.infrastructure.DataStreamServiceRequest.AppendToDataStreams" },
        "studyDeploymentId": { "type": "string", "format": "uuid" },
        "batch": { "$ref": "#/definitions/DataStreamBatch" }
      },
      "required": [ "$type", "studyDeploymentId", "batch" ],
      "additionalProperties": false
	},
    {
      "type": "object",
  	  "properties": {
        "$type": { "const": "dk.cachet.carp.data.infrastructure.DataStreamServiceRequest.GetDataStream" },
        "dataStream": { "$ref": "#/definitions/DataStreamId" },
        "fromSequenceId": { "type": "integer" },
        "toSequenceIdInclusive": { "type": ["integer", "null"] }
      },
      "required": [ "$type", "dataStream", "fromSequenceId" ],
      "additionalProperties": false
	},
    {
      "type": "object",
  	  "properties": {
        "$type": { "const": "dk.cachet.carp.data.infrastructure.DataStreamServiceRequest.CloseDataStreams" },
        "studyDeploymentIds": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        }
      },
      "required": [ "$type", "studyDeploymentIds" ],
      "additionalProperties": false
	},
    {
      "type": "object",
  	  "properties": {
        "$type": { "const": "dk.cachet.carp.data.infrastructure.DataStreamServiceRequest.RemoveDataStreams" },
        "studyDeploymentIds": {
          "type": "array",
          "items": { "type": "string", "format": "uuid" }
        }
      },
      "required": [ "$type", "studyDeploymentIds" ],
      "additionalProperties": false
	}
  ]
}
