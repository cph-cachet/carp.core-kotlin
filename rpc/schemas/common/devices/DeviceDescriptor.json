{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "allOf": [
    { "$ref": "#/$defs/DeviceDescriptor" },
    {
      "if": { "properties": { "$type": { "const": "dk.cachet.carp.common.application.devices.AltBeacon" } } },
      "then": { "$ref": "AltBeacon.json" }
    },
    {
      "if": { "properties": { "$type": { "const": "dk.cachet.carp.common.application.devices.BLEHeartRateDevice" } } },
      "then": { "$ref": "BLEHeartRateDevice.json" }
    },
    {
      "if": { "properties": { "$type": { "const": "dk.cachet.carp.common.application.devices.CustomProtocolDevice" } } },
      "then": { "$ref": "CustomProtocolDevice.json" }
    }
  ],
  "$defs": {
    "DeviceDescriptor": {
      "type": "object",
      "properties": {
        "$type": true,
        "roleName": { "type": "string" },
        "isOptional": { "type": "boolean" },
        "defaultSamplingConfiguration": {
          "type": "object",
          "propertyNames": { "$ref": "../NamespacedId.json" },
          "additionalProperties": { "$ref": "../sampling/SamplingConfiguration.json" }
        }
      },
      "required": [ "$type", "roleName" ]
    }
  }
}
