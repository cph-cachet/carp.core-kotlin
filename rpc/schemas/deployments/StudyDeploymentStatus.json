{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "createdOn": { "type": "string", "format": "date-time" },
        "studyDeploymentId": { "type": "string", "format": "uuid" },
        "devicesStatus": {
          "type": "array",
          "items": { "$ref": "DeviceDeploymentStatus.json" }
        },
        "participantsStatus": {
          "type": "array",
          "items": { "$ref": "users/ParticipantStatus.json" }
        },
        "startedOn": {
          "oneOf": [
            { "type": "null" },
            { "type": "string", "format": "date-time" }
          ]
        }
      },
      "required": [ "createdOn", "studyDeploymentId", "devicesStatus", "participantsStatus", "startedOn" ]
    },
    {
      "oneOf": [
        { "$ref": "#/$defs/Invited" },
        { "$ref": "#/$defs/DeployingDevices" },
        { "$ref": "#/$defs/Running" },
        { "$ref": "#/$defs/Stopped" }
      ]
    }
  ],
  "$defs": {
    "Invited": {
      "$anchor": "Invited",
      "type": "object",
      "properties": {
        "$type": { "const": "dk.cachet.carp.deployments.application.StudyDeploymentStatus.Invited" }
      },
      "required": [ "$type" ]
    },
    "DeployingDevices": {
      "$anchor": "DeployingDevices",
      "type": "object",
      "properties": {
        "$type": { "const": "dk.cachet.carp.deployments.application.StudyDeploymentStatus.DeployingDevices" }
      },
      "required": [ "$type" ]
    },
    "Running": {
      "$anchor": "Running",
      "type": "object",
      "properties": {
        "$type": { "const": "dk.cachet.carp.deployments.application.StudyDeploymentStatus.Running" },
        "startedOn": { "type": "string", "format": "date-time" }
      },
      "required": [ "$type" ]
    },
    "Stopped": {
      "$anchor": "Stopped",
      "type": "object",
      "properties": {
        "$type": { "const": "dk.cachet.carp.deployments.application.StudyDeploymentStatus.Stopped" },
        "stoppedOn": { "type": "string", "format": "date-time" }
      },
      "required": [ "$type", "stoppedOn" ]
    }
  }
}
